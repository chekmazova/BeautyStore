<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.beautystore1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ClientActivities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ClientActivities.CategoryActivity" />
        <activity android:name=".Activities.ClientActivities.ProductActivity" />
        <activity android:name=".Activities.ClientActivities.CartActivity" />
        <activity android:name=".Activities.ClientActivities.LoginActivity" />
        <activity android:name=".Activities.ClientActivities.RegisterActivity" />
        <activity android:name=".Activities.ClientActivities.CheckoutActivity" />
        <activity android:name=".Activities.ManagementActivities.ManageProductsActivity" />
        <activity android:name=".Activities.ManagementActivities.ManageStoreInfoActivity" />
        <activity android:name=".Activities.ClientActivities.AccountDetailsActivity" />
    </application>

</manifest>